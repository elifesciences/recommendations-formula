[Unit]
Description="recommendations-queue-watch"
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Restart=on-failure
RestartSec=10
TimeoutStopSec=70
User={{ pillar.elife.deploy_user.username }}
Environment="HOME=/home/{{ pillar.elife.deploy_user.username }}"
WorkingDirectory=/srv/recommendations
ExecStart=/usr/bin/php bin/console queue:watch --env={{ pillar.elife.env }} $I

